
<script type="text/javascript">
    var config    = {"business": "{{PacNEM_Frontend_Config.business}}", "application": "{{PacNEM_Frontend_Config.application}}", "namespace": "{{PacNEM_Frontend_Config.namespace}}"};
    var socket    = io.connect(window.location.protocol + '//' + window.location.host);
    var nem       = require("nem-sdk").default;
    var game_ctrl = new GameController(config, socket, nem, {{currentNetwork.config.id}});
    var game_ui   = new GameUI(config, socket, game_ctrl, $, new jQFileTemplate());

    $(document).ready(function()
    {
        game_ui.initDOMListeners();

        // set blockchain network
        $("#currentBlockchain-network").text("{{currentNetwork.label}}");
    });
</script>

